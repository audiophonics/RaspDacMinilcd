begin
prog = irexec
button = playright
config = DISPLAY=:0 xset dpms force on; /usr/local/bin/volumio seek plus &
delay = 2
repeat = 3
end

begin
prog = irexec
button = playleft
config = DISPLAY=:0 xset dpms force on; /usr/local/bin/volumio seek minus &
delay = 2
repeat = 3
end

